<div class="divider"></div>
<div class="ui black segment" >
  <div class="ui dividing header">Add New Common Tool</div>
  <div class="ui small form">
    <div class="ui stackable grid">
      <div class="five wide right aligned dividing column">

        <div class="inline field  {{validCompanycodeError}}" >
          <label>Name : </label>
          {{input placeholder="Name"  type="text"  value=name }}

        </div>
{{#if (eq status "Issued")}}
                <div class="inline field" style="float:right">
                  <label> Issued Date :</label>
                  {{pikaday-input  placeholder="Issue Date" value=issuedate }}
                </div>

                <div class="inline field" style="float:right">
                  <label> Return Date :</label>
                  {{pikaday-input  placeholder="Return Date" value=returndate }}
                </div>
                {{/if}}

                <div class="inline field" style="float:right">
                  <label>Location:</label>
                  {{input placeholder="Location"  type="text"  value=location }}
                </div>





      </div>
      <div class="five wide  right aligned  column">


        <div class="ui grid" >
          <div class=" five wide column ">
            <label style="margin-top:10px"> Employee :</label>
          </div>
          <div class=" eleven wide column ">

          {{ember-selectize
            content=employees
            optionValuePath="content.id"
            optionLabelPath="content.name"
            selection=employee
            placeholder="Select an employee" }}
        </div>
      </div>

