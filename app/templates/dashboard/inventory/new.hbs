

<div class="ui small form segment">




  <div class=" two fields">
    <div class="field {{validItemcodeError}}">
      <label>Item Code</label>
      {{input placeholder="Item Code"  type="text"   value=itemcode  key-up="validItemcode"}}
      <label>{{validItemcodeMessage}}</label>
    </div>

    <div class="field">
      <label>Product Name</label>
      {{input placeholder="Product Name"  type="text" value=productname}}
    </div>

  </div>
  <div class="two fields">
    <div class="field">
      <label> Supplier </label>
      <div class="ui grid">
        <div class="twelve wide column ">
          {{ember-selectize
            content=suppliers
            optionValuePath="content.id"
            optionLabelPath="content.companyname"
            selection=supplier
            placeholder="Select Supplier"
            class="ui left floated"
          }}
        </div>
        <div class="four wide column ">
      <div class="ui blue small  submit button"  {{action "openSupplierModal"}}>New Supplier</div>
    </div>
      </div>
    </div>


      <div class="field">
        <label> Product type</label>
        <div class="ui grid">
          <div class="eleven wide column ">
            {{ember-selectize
              content=producttypes
              optionValuePath="content.id"
              optionLabelPath="content.typename"
              selection=typename
              placeholder="Select Product Type" }}
            </div>
            <div class="five wide column ">
        <div class="ui blue small submit button"  {{action "openProductTypeModal"}}>New Product Type</div>
      </div>
    </div>
        </div>
      </div>

      <div class="two fields">
        <div class="field">
          <label>Product Brand</label>
          <div class="ui grid">
            <div class="eleven wide column ">
              {{ember-selectize
                content=productbrands
                optionValuePath="content.id"
                optionLabelPath="content.brandname"
                selection=brandname
                placeholder="Select  Brand" }}
              </div>
              <div class="five wide column ">
          <div class="ui blue small submit button"  {{action "openProductBrandModal"}}>New Product Brand</div>
        </div>
      </div>
          </div>
          <div class="field">
            <label>Initial Stock</label>
            {{input placeholder="Initial Stock" type="number" value=initialstocklevel}}
          </div>
        </div>
        <div class="two fields">
          <div class="field">
            <label>Initial Cost Price</label>
            {{input placeholder="Initial Cost Price" type="number" value=initialcostprice}}
          </div>
          <div class="field">
            <label>Buy Price</label>
            {{input placeholder="Buy Price" type="number" value=buyprice }}
          </div>
        </div>

        <div class="two fields">
          <div class="field">
            <label>Retail Price</label>
            {{input placeholder="Retails Price"   readonly="readonly" type="number" value=retailprice}}
          </div>

        </div>
        <div class="ui blue small submit button {{isCreateProductButtonDisabled}}"   {{action "createProduct"}}>Submit</div>
      </div>

      <div class="ui small newsupplier modal"style="top:50px;bottom:50px">
        <i class="close icon"></i>
        <div class="header">Add New Supplier</div>
        <div class="content">
          <p>
            <div class="ui small form segment">
              <div class="two fields">
                <div class="field">
                  <label>Company Name</label>
                  {{input placeholder="Company Name" type="text" value=companyname }}
                </div>
                <div class="field">
                  <label>Email</label>
                  {{input placeholder="Email" type="email" value=email}}
                </div>
              </div>

              <div class="two fields">
                <div class="field {{validChargecodeError}}">
                  <label>Charge Code</label>
                  {{input placeholder="Charge Code" type="text" value=chargecode key-up="validChargecode"}}
                  <label>{{validChargecodeMessage}}</label>
                </div>
                <div class="field {{validCompanycodeError}}">
                  <label>Company Code</label>
                  {{input placeholder="Company Code" type="email" value=companycode key-up="validCompanycode"}}
                  <label>{{validCompanycodeMessage}}</label>
                </div>
              </div>

              <div class="two fields">
                <div class="field">
                  <label>Address 1</label>
                  {{input placeholder="Address 1" type="text" value=address1}}
                </div>
                <div class="field">
                  <label>Address 2</label>
                  {{input placeholder="Address 2" type="text" value=address2}}
                </div>
              </div>

              <div class="two fields">
                <div class="field">
                  <label>Suburb</label>
                  {{input placeholder="Suburb" type="text" value=suburb}}
                </div>
                <div class="field">
                  <label>City</label>
                  {{input placeholder="City" type="text" value=city}}
                </div>
              </div>

              <div class="two fields">
                <div class="field">
                  <label>State</label>
                  {{input placeholder="State" type="text" value=state}}
                </div>
                <div class="field">
                  <label>Country</label>
                  {{input placeholder="Country" type="text" value=country}}
                </div>
              </div>



              <div class="two fields">
                <div class="field">
                  <label>Zip Code</label>
                  {{input placeholder="Zipcode" type="text" value=zipcode}}
                </div>
                <div class="field">
                  <label>Phone</label>
                  {{input placeholder="Phone" type="text" value=phone}}
                </div>
              </div>
              <div class="ui blue small submit button {{isCreateSupplierButtonDisabled}}" {{action "createSupplier"}}>Submit</div>
            </div>
          </p>

        </div>
      </div>


      <div class="ui newproductbrand small modal" style="top:150px;bottom:250px">
        <div class="header">New Product Brand</div>
        <div class="content">
          <div class="ui small form segment">

            <div class=" fields">
              <div class="field">
                <label>New Product Brand</label>
                {{input placeholder="Product Brand" type="text" value=newproductbrand}}
              </div>
            </div>
          </div>
          <div class="ui blue small submit button" {{action "createProductBrand"}}>Submit</div>
        </div>
      </div>


      <div class="ui newproducttype small modal"style="top:150px;bottom:250px">
        <div class="header">New Product Type</div>
        <div class="content">
          <div class="ui small form segment">

            <div class=" fields">
              <div class="field {{validProductTypeError}}">
                <label>New Product Type</label>
                {{input placeholder="Product Type" type="text" value=newproducttype key-up="validProductType"}}
                <label>{{validProductTypeMessage}}</label>
              </div>
            </div>
          </div>
          <div class="ui blue small submit button " {{action "createProductType"}}>Submit</div>
        </div>
      </div>
