                                          <option value={{natureChoice}} selected={{eq order.natureofwork natureChoice}}>{{natureChoice}}</option>
                                          {{/each}}
                                        </select>
            </div>
            <div class="inline field" style="float:right">
              <label >Date :</label>

              {{pikaday-input  placeholder="Date" value=issuancedate}}
