                        </tr>
                        <tr>
                          <td>Amount Chargable (In Words)</td>
                          <td class="right aligned n2e">{{number-to-english number=order.chargableamount}}</td>
                        </tr>

                        <tr>
                          <td>Previous Balance</td>
                          <td class="right aligned">{{order.customer.due}}</td>
                        </tr>
            </tbody>
          </table>
        </div>
      </div>
