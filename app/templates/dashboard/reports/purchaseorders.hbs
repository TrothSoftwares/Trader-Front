<div class="print-box">
<h2 class="ui left floated header no-print"> Purchase Report</h2>
<img src="images/hed1.png" class="only-print" >
<div class="ui clearing  divider only-print"></div>
<div class="ui center aligned dividing header only-print">Purchase Report</div>
<button class="ui tiny primary right floated button no-print" {{action "printReport"}}>Print</button>

<div class="clearfix"></div>
<div class="ui small form ">
<div class=" four fields" >
  <div class=" field" >
    <label >Supplier:</label>
    {{ember-selectize
      content=suppliers
      optionValuePath="content.id"
      optionLabelPath="content.companyname"
      selection=supplier
      placeholder="Select a Supplier"
      class="no-print"
    }}
    <p class="only-print">{{supplier.companyname}}</p>

  </div>

  <div class=" field" >
    <label >Start Date:</label>
    {{pikaday-input  placeholder="Select Date" value=startdate class="no-print"}}
    <p class="only-print">{{startdate}}</p>
  </div>
  <div class=" field" >
    <label>End Date</label>
    {{pikaday-input  placeholder="Select Date" value=enddate class="no-print"}}
    <p class="only-print">{{enddate}}</p>
  </div>
  <div class=" field" >
  <button class="ui tiny right floated inverted red button no-print" style="margin-top:25px" {{action "clearFilters"}}>Clear All Filters</button>
  </div>
</div>
</div>
<table class="ui celled structured center aligned table">
  <thead>
    <tr><th>No.</th>
    <th>Supplier</th>
    <th>Incoming Stocks </th>
    <th>Due Date</th>
    <th>Total Cost of Incoming Stocks</th>
  </tr></thead>

  <tbody>
    {{#each filteredProducts  as |purchaseorder index|}}
    <tr>
  <td> {{ incrementone index}}</td>
  <td> {{purchaseorder.supplier.companyname}}</td>
  <td> {{purchaseorder.duedate}}</td>
  <td> {{purchaseorder.totalunits}}</td>
  <td> {{purchaseorder.totalcost}}</td>
    </tr>
    {{/each}}
    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td></td>

      <td>{{computedIncomingTotal}}</td>
    </tr>
  </tbody>
</table>
</div>

{{outlet}}
